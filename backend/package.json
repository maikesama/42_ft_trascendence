    "@nestjs/jwt": "^8.0.1",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "^8.0.0",
    "@prisma/client": "^4.1.0",
    "@types/express-session": "^1.17.4",
    "argon2": "^0.28.7",
    "bcrypt": "^5.0.1",
    "cache-manager": "^4.1.0",
    "cache-manager-redis-store": "^2.0.0",
    "connect-redis": "^6.1.3",
