    "hbs": "^4.2.0",
    "mongoose-findorcreate": "^3.0.0",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.7.6",
    "otplib": "^12.0.1",
    "passport": "^0.6.0",
    "passport-2fa-totp": "^0.0.1",
    "passport-42": "^1.2.6",
    "passport-jwt": "^4.0.0",
    "qrcode": "^1.5.0",
    "redis": "^4.2.0",
